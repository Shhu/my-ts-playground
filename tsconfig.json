{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "baseUrl": ".",
        "skipLibCheck": true,
        "noEmit": true
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.d.ts",
        "packages/**/*.tsx",
        "packages/**/*.vue"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ],
    "paths": {
        "@app-shared/*": [
            "./packages/shared/*"
        ],
        "@app-server/*": [
            "./packages/server/*"
        ]
    }
}
